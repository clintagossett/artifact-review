# Docker Compose environment for Mark's agent
# Used by docker-compose.yml

# Port configuration (from .env.agent.local)
CONVEX_ADMIN_PORT=3220
CONVEX_HTTP_PORT=3221
CONVEX_DASHBOARD_PORT=6801
MAILPIT_WEB_PORT=8035
MAILPIT_SMTP_PORT=4035

# Instance configuration
INSTANCE_NAME=artifact-review-local
# NOTE: Do NOT set INSTANCE_SECRET here - the container generates it on first start
# and persists it in the Docker volume. The admin key is derived from this secret.

# Override CONVEX_SITE_ORIGIN for proper storage URL generation
# This must be accessible from the browser through the orchestrator proxy
# Uses the Convex site DNS pattern (*.convex.site.loc) - see ADR 0004
CONVEX_SITE_URL=http://mark.convex.site.loc
