{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:log": "./scripts/dev.sh",
    "build": "next build",
    "postbuild": "npx novu@latest sync --bridge-url $SITE_URL/api/novu --secret-key $NOVU_SECRET_KEY --api-url $NOVU_API_URL || echo 'Novu sync failed (non-fatal)'",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "NODE_PATH=./node_modules NODE_EXTRA_CA_CERTS=${NODE_EXTRA_CA_CERTS:-$(mkcert -CAROOT 2>/dev/null)/rootCA.pem} playwright test",
    "test:e2e:ui": "NODE_PATH=./node_modules NODE_EXTRA_CA_CERTS=${NODE_EXTRA_CA_CERTS:-$(mkcert -CAROOT 2>/dev/null)/rootCA.pem} playwright test --ui",
    "test:e2e:headed": "NODE_PATH=./node_modules NODE_EXTRA_CA_CERTS=${NODE_EXTRA_CA_CERTS:-$(mkcert -CAROOT 2>/dev/null)/rootCA.pem} playwright test --headed",
    "test:e2e:visual": "NEXT_PUBLIC_TEST_ASYNC_DELAY_MS=10000 NODE_PATH=./node_modules NODE_EXTRA_CA_CERTS=${NODE_EXTRA_CA_CERTS:-$(mkcert -CAROOT 2>/dev/null)/rootCA.pem} playwright test --headed --grep 'visual:'",
    "proxy": "node scripts/local-proxy.js",
    "proxy:80": "sudo PORT=80 node scripts/local-proxy.js"
  },
